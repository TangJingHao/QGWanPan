<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/home_page_rl"
        android:layout_width="match_parent"
        android:background="@drawable/home_background"
        android:layout_height="350dp">
        <LinearLayout
            android:id="@+id/top_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="44dp"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QG Cloud"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/check_upload_btn"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="192dp"
                android:background="@drawable/upload"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/used_tv"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/top_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="512GB"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            />
        <ProgressBar
            android:id="@+id/home_page_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:layout_marginLeft="40dp"
            android:progressDrawable="@drawable/final_progressbar"
            android:layout_below="@id/used_tv"
            android:layout_width="296dp"
            android:layout_height="8dp"/>
        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/home_page_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/home_max_tv"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="314dp"
            android:layout_below="@id/home_page_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1GB"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/home_max_tv"
            android:id="@+id/home_page_search_view"
            android:background="@drawable/home_page_search_view"
            android:layout_width="296dp"
            android:layout_height="40dp">
            <TextView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入文件名开始搜索"
                android:textColor="#ff9dc8c8"
                android:textSize="14sp"
                />
            <ImageView
                android:background="@drawable/home_search"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="256dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="24dp"
        android:id="@+id/normal_tv"
        android:layout_below="@id/home_page_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近使用"
        android:textColor="#ff000000"
        android:textSize="18sp"
        />
    <ListView
        android:id="@+id/file_lv"
        android:layout_below="@id/normal_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>