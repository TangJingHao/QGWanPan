<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:textColorHint="#707070"
        android:hint="你的名字"
        android:textColor="@color/black"
        android:id="@+id/fragment_register_user_real_name_et"
        android:layout_width="280dp"
        android:background="@drawable/login_edittext_background"
        android:layout_height="32dp"/>
    <EditText
        android:id="@+id/fragment_register_user_mailbox_et"
        android:layout_below="@id/fragment_register_user_real_name_et"
        android:layout_marginTop="32dp"
        android:hint="注册邮箱"
        android:layout_marginLeft="24dp"
        android:layout_width="280dp"
        android:background="@drawable/login_edittext_background"
        android:textColorHint="#707070"
        android:layout_height="32dp"/>
    <EditText
        android:id="@+id/fragment_verification_code_et"
        android:layout_marginTop="32dp"
        android:layout_below="@id/fragment_register_user_mailbox_et"
        android:hint="验证码"
        android:layout_marginLeft="24dp"
        android:layout_width="160dp"
        android:background="@drawable/login_edittext_background"
        android:textColorHint="#707070"
        android:layout_height="32dp"/>
    <Button
        android:id="@+id/fragment_verification_code_btn"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/fragment_verification_code_et"
        android:text="获取验证码"
        android:background="@drawable/post_code"
        android:layout_width="104dp"
        android:layout_height="32dp"/>
    <EditText
        android:inputType="numberPassword"
        android:hint="输入你的密码"
        android:layout_marginTop="32dp"
        android:layout_below="@id/fragment_verification_code_et"
        android:layout_marginLeft="24dp"
        android:layout_width="280dp"
        android:background="@drawable/login_edittext_background"
        android:textColorHint="#707070"
        android:layout_height="32dp"/>
</RelativeLayout>