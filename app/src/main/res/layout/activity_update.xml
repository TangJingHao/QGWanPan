<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/user_current_information_rl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <com.example.myapplication.bean.CircleImageView
            android:layout_alignParentStart="true"
            android:background="@mipmap/default_icon"
            android:id="@+id/update_myIcon_iv"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10sp"
            android:layout_alignParentLeft="true" />
        <Button
            android:id="@+id/update_myIcon_btn"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/update_myIcon_iv"
            android:background="@mipmap/add_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

</RelativeLayout>

