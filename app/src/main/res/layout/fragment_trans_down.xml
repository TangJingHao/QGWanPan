<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/down_location_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/background_color"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="下载到本地"
        />
    <RelativeLayout
        android:id="@+id/down_doing_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/down_location_tv">
        <TextView
            android:id="@+id/down_doing_tv"
            style="@style/trans_brock"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:text="正在上传"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/down_start_bt"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/trans_button_bg"/>
        <ImageView
            android:id="@+id/down_doing_line"
            android:layout_width="match_parent"
            android:background="@color/line_bg"
            android:layout_height="2dp"
            android:layout_below="@+id/down_doing_tv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/down_doing_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/down_doing_layout"/>
    <ImageView
        android:id="@+id/down_center_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_center_bg"
        android:layout_below="@+id/down_doing_rv"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:id="@+id/down_finish_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/down_center_line">
        <TextView
            android:id="@+id/down_finish_tv"
            style="@style/trans_brock"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:text="下载完成"
            android:layout_marginLeft="10dp"/>
            <ImageView
            android:id="@+id/down_finish_line"
            android:layout_width="match_parent"
            android:background="@color/line_bg"
            android:layout_height="2dp"
            android:layout_below="@+id/down_finish_tv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/down_finish_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/down_finish_layout"/>

</RelativeLayout>