<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#009D9F"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#009D9F"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/init_my_icon_rl"
            android:layout_width="match_parent"
            android:background="#009D9F"
            android:layout_height="184dp">
            <com.example.myapplication.bean.CircleImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/init_my_icon_background"
                android:id="@+id/init_my_icon_cv"
                android:layout_width="88dp"
                android:layout_height="88dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/init_my_icon_rl"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.tabs.TabLayout
                android:background="@drawable/login_tab_layout_background"
                android:id="@+id/init_tab_layout"
                android:layout_centerHorizontal="true"
                android:layout_width="328dp"
                android:layout_height="48dp"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/init_view_pager"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/init_tab_layout"
                android:layout_width="328dp"
                android:layout_height="408dp"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>