<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CAE1FF">
    <com.example.myapplication.bean.CircleImageView
        android:layout_alignParentStart="true"
        android:background="@mipmap/default_icon"
        android:id="@+id/myIcon_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10sp"
        android:layout_alignParentLeft="true" />
    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/myIcon_iv"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="用户ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/user_id_tv"
                android:layout_marginLeft="40dp"
                android:text="xxxxxx"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="用户昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/user_nickname_tv"
                android:layout_marginLeft="40dp"
                android:text="育苗没学人"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>